{
  "name": "consensys-code-review",
  "displayName": "Consensys Code Review",
  "description": "Multi-agent AI code review with debate-style consensus building",
  "version": "0.1.0",
  "publisher": "consensys",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "code review",
    "ai",
    "claude",
    "multi-agent",
    "consensus"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/noah-ing/consensys"
  },
  "icon": "images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "consensus.reviewFile",
        "title": "Consensys: Review Current File",
        "icon": "$(shield)"
      },
      {
        "command": "consensus.reviewSelection",
        "title": "Consensys: Review Selection",
        "icon": "$(selection)"
      },
      {
        "command": "consensus.clearDiagnostics",
        "title": "Consensys: Clear Review Diagnostics",
        "icon": "$(clear-all)"
      },
      {
        "command": "consensus.showFixSuggestion",
        "title": "Consensys: Show Fix Suggestion"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "consensus.reviewSelection",
          "when": "editorHasSelection",
          "group": "consensus@1"
        },
        {
          "command": "consensus.reviewFile",
          "group": "consensus@2"
        }
      ],
      "editor/title": [
        {
          "command": "consensus.reviewFile",
          "when": "resourceLangId =~ /python|javascript|typescript|go|rust|java|cpp|c/",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "consensus.reviewFile",
          "when": "editorIsOpen"
        },
        {
          "command": "consensus.reviewSelection",
          "when": "editorHasSelection"
        },
        {
          "command": "consensus.clearDiagnostics"
        }
      ]
    },
    "keybindings": [
      {
        "command": "consensus.reviewFile",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "consensus.reviewSelection",
        "key": "ctrl+shift+alt+r",
        "mac": "cmd+shift+alt+r",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Consensys Code Review",
      "properties": {
        "consensus.apiEndpoint": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "The URL of the Consensys web API server"
        },
        "consensus.autoReviewOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically review files when saved"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
